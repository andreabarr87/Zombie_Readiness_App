<h1>WEAPONS!!!!!</h1>
<ul>
<h2>Available:</h2>
<% @weapons.each do |weapon| %> 
    <li>
        <%= weapon.name %> <br>
        readiness value: <%= weapon.readiness_value %>
    </li>
    <%= button_to 'Pick Up Weapon', weapon_path(weapon), method: :put %>
    <br />
<% end %> 

<br />
<h3>In use:</h3>
<% @taken_weapons.each do |weapon| %> 
    <li>
    <%= weapon.name %><br>
    user: <%= link_to weapon.user.name, user_path(weapon.user) %><br>
    readiness value: <%= weapon.readiness_value %>
    </li>
    <br />
<% end %> 
</ul>